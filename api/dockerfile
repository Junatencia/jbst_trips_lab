FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y gcc libpq-dev && rm -rf /var/lib/apt/lists/*


# Copy requirements.txt from api/ when building from project root
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy all app files from api/ when building from project root
COPY . .

EXPOSE 8000
# default command (api service overrides with uvicorn in compose)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]